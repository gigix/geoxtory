<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
<style type="text/css">
	html { height: 100% }
  	body { height: 100%; margin: 0px; padding: 0px }

	.user_inputs {
		float: left;
	}

  	#map_canvas{
   		height:100%;
   		width:45%;
		float: right;
  	}

  	#resultsCanvas{
   		height:100%;
   		width:15%;
   		float:right;
  	}
</style>
<%= javascript_include_tag :defaults %>
<script type="text/javascript" src="http://www.google.com/jsapi"></script>
<script type="text/javascript" src="/javascripts/csv.js"></script>
<script type="text/javascript">
google.load('maps','3',{other_params:'sensor=false&language=zh'}); // load the maps api

function initialize() {
	var map = createMap();	
	// TODO: should mark the map based on current locations
	// process("locations.csv", map);
}

function createMap() {	
	var myLatlng = new google.maps.LatLng(0, 0);
	var myOptions = {
		zoom: 2,
	    center: myLatlng,
	    mapTypeId: google.maps.MapTypeId.ROADMAP
	}
  	var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

	gbarOptions = {
		resultList : document.getElementById('resultsCanvas')
	};
	map.controls[google.maps.ControlPosition.BOTTOM_LEFT].push((window.gbar=new window.jeremy.jGoogleBar(map,gbarOptions)).container);
	
	return map;
}

function process(csv_file, map) {
	$.ajax({
	  type: 'GET',
	  url: csv_file,
	  cache: false,
	  success: function(csv){ 
		markLocations(csv, map);	
	  }
	});		
}

function markLocations(csv, map) {
	var latlngbounds = new google.maps.LatLngBounds();
	var infowindow = new google.maps.InfoWindow({
		maxWidth: 400,
		content: "doesn't matter..."
	});

	$.each(parseCSV(csv), function(index, location) {
		var point = new google.maps.LatLng(location['Lat'], location['Long']);
		latlngbounds.extend(point);
		
		var marker = new google.maps.Marker({
			position: point,
			map: map,
			title: location['Name'],
			html: '<h2><a href="' + location['URL'] + '" target="_blank">' + location['Name'] + '</a></h2><em>' + location['Description'] + '</em><p><img src="' + location['Thumb_URL'] + '" height="160px" /></p>'
		});
		
		google.maps.event.addListener(marker, "click", function(){
			infowindow.setContent(this.html);
			infowindow.open(map, this);
		});
	});
	map.fitBounds(latlngbounds);	
}

google.setOnLoadCallback(initialize);
</script>
<script type="text/javascript" src="/javascripts/jGoogleBarV3.js"></script>
</head>
<body>
	<div class='user_inputs'>
		<div id='edit_form'>
			<h2>关于我的故事</h2>
			<%= form_for(@trip, :url => trip_path(@trip), :html => {:method => :put}) do |f| %>
				<dl>
					<dt>故事的名字</dt>
					<dd><%= f.text_field :name %></dd>
					<dt>详细描述</dt>
					<dd><%= f.text_area :description %></dd>
				</dl>
				<%= f.submit '更新我的地图故事' %>
			<% end %>
		</div>
	
		<div id='locations'>
			<h2>这个故事包含以下地点：</h2>
			<ul>
				<% @trip.locations.each do |location| %>
				<li>
					<%= location.name %> ( <%= location.latitude %>, <%= location.longitude %>)
					&nbsp;&nbsp;
					<%= button_to "删除", trip_location_path(@trip, location), :confirm => "确定删除这个地点吗？", :method => :delete %>
				</li>
				<% end %>
			</ul>
		</div>
	
		<div id='add_location_form'>
			<h2>增加新地点</h2>
			<%= form_for(@trip, :url => trip_locations_path(@trip), :html => {:method => :post}) do |f| %>
				<%= f.fields_for :locations do |location_f| %>
					<dl>
						<dt>名称</dt><dl><%= location_f.text_field :name %></dl>
						<dt>描述</dt><dl><%= location_f.text_area :description %></dl>
						<dt>纬度</dt><dl><%= location_f.text_field :latitude %></dl>
						<dt>经度</dt><dl><%= location_f.text_field :longitude %></dl>
						<dt>主要图片链接</dt><dl><%= location_f.text_field :image_url %></dl>
						<dt>缩略图链接</dt><dl><%= location_f.text_field :thumbnail_url %></dl>
					</dl>
					<%= location_f.submit '添加新地点' %>
				<% end %>
			<% end %>
		</div>
	</div>
	
	<div id='map_search'>
	  	<div id="resultsCanvas"></div>
	</div>
	
  	<div id="map_canvas"></div>
</body>
</html>
